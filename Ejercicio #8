void main() {
  print('Este programa calcula el factorial de un n√∫mero con un argumento posicional');
  int numero = 5;
  int factorial = calcularFactorial(numero);
  print('El factorial de $numero es: $factorial');
}

int calcularFactorial(int n) {
  if (n <= 1) {
    return 1;
  } else {
    int resultado = n;
    for (int i = n - 1; i > 1; i--) {
      resultado = sumaSinOperador(resultado, n);
    }
    return resultado;
  }
}

int sumaSinOperador(int a, int b) {
  int suma = 0;
  for (int i = 0; i < a; i++) {
    suma += b;
  }
  return suma;
}
